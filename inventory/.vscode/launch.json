{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Runserver",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "env": {
            },
            "args": [
                "runserver"
            ],
            "justMyCode": false,
            "django": true,
        },
        {
            "name": "Debug PyTest",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "args": [
                "-n1",
                "-rA",
                "--disable-warnings",
                "--ds=inventory.settings.test",
                "--fail-on-template-vars",
                "--capture=tee-sys"
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Shell+",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "shell_plus"
            ],
            "justMyCode": false,
            "django": true
        },
        {
            "name": "Celery Shell",
            "type": "debugpy",
            "request": "launch",
            "program": "${env:VIRTUAL_ENV}/bin/celery",
            "args": [
                "--app",
                "inventory",
                "shell"
            ],
            "justMyCode": false,
            "django": true
        },
    ]
}
